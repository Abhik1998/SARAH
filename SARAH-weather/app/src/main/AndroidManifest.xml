<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhik.weatherapp">

    <!-- Used to connect to web services and location provider -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application android:name="com.abhik.weatherapp.com.abhik.weatherapp.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.abhik.weatherapp.com.abhik.weatherapp.activity.WeatherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
