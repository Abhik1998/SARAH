<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placeOnEnter_EditText_AddRem_popup1"
        android:hint="placeOnEnter"
        android:background="@drawable/edit_shape"/>
    <Spinner
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        />
    <EditText
        android:id="@+id/placeOnLeave_EditText_AddRem_popup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="placeOnLeave"
        android:background="@drawable/edit_shape"/>

    <Spinner
        android:id="@+id/s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        />

    <ImageButton
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:backgroundTint="#00444444"
        android:src="@drawable/ic_menu_send"
        android:id="@+id/next1st_ImageBtn_AddReminder_popup1"/>

</LinearLayout>